@{
    Layout = "../Shared/_Layout.cshtml";
}

@model AvaliacaoEverisAPI.Models.Produto

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="header jumbotron">
        <h1>Editar produto</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                @using (Ajax.BeginForm("EditaProduto", "Produtos", new AjaxOptions() { HttpMethod = "POST" }))
                {

                    <div class="form-group">
                        <label for="cdgproduto">CODIGO DO PRODUTO</label>
                        <br />
                        @Html.EditorFor(Model => Model.CDGPRODUTO, new { htmlAttributes = new { @readonly = "readonly" }})
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.NOMEPRODUTO)
                        <br />
                        @Html.EditorFor(Model => Model.NOMEPRODUTO)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.EMPRESA)
                        <br />
                        @Html.EditorFor(Model => Model.EMPRESA)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.ENTRADA)
                        <br />
                        @Html.EditorFor(Model => Model.ENTRADA)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.SAIDA)
                        <br />
                        @Html.EditorFor(Model => Model.SAIDA)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(Model => Model.ESTOQUE)
                        <br />
                        @Html.EditorFor(Model => Model.ESTOQUE)
                    </div>

                    <div class="row">&nbsp;</div>
                    <div>
                        <button class="btn btn-warning"><p>@Html.ActionLink("Voltar", "Index", "Home")</p></button>
                        <input type="submit" value="Editar" />
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
